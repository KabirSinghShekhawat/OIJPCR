<hr>
<div class="submit-comment flex flex-column">
    <div class="commentBox-heading">
        <p>Leave a Reply!</p>
        <p>Your email address will not be published.
            Required fields are marked as 
        </p>
    </div>
    <form method="POST" action="/journals/<%= journal.slug %>/<%=journal._id%>">
        <div class="flex comment-input-group">
            <div class="flex">
                <label for="author">Name</label>
            </div>
            <div class="flex">
                <input type="text" name="name" id="name" placeholder="Name">
            </div>
        </div>

        <div class="flex comment-input-group">
            <div class="flex">
                <label for="email">Email</label>
            </div>
            <div class="flex">
                <input type="email" name="email" id="email" placeholder="Email">
            </div>
        </div>

        <div class="flex comment-input-group">
            <div class="comment-field flex">
                <label for="comment">Comment</label>
            </div>
            <div class="comment-field flex">
                <textarea name="comment" id="comment" placeholder="Comment"></textarea>
            </div>
        </div>

        <div class="button-container flex">
            <button type="submit">Post Comment</button>
        </div>
    </form>
</div>

<div class="comments-container submit-comment">
    <div>
        <h1>
            Comments
        </h1>
        <% if(comments.length===1) { %>
            <div class="responses-title">
                <span>1 Response to "Editor's Note"</span>
            </div>
            <% } else { %>
                <div class="responses-title">
                    <span>
                        <%=comments.length%> Responses to "Editor's Note"
                    </span>
                </div>
                <% } %>
    </div>
    <div class="comments-list flex flex-column">
        <% for( let comment of comments) { %>
            <div class="comment-body flex flex-column">
                <% const date=dateFormat(comment.createdAt) %>
                <div class="comment-top flex">
                    <div class="comment-profilePicture">
                        <img src="/assets/svg/teamMember.svg" alt="profile picture">
                    </div>
                    <div class="comment-info">
                        <span><%= comment.username %></span>
                        <br>
                        <span id="date"><%= date %></span>
                    </div>
                </div>
                <div class="comment-content">
                    <p>
                        <%= comment.comment %>
                    </p>
                </div>
            </div>
        <% } %>
    </div>
</div>