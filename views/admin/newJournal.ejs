<%- include('../partials/adminHeader') %>

<body class="container-fluid">
    <form method="POST" action="/admin/journal" class="form">
        <textarea id="summernote" name="editordata"></textarea>
        
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" name="title" class="form-control" id="title" placeholder="Title">
        </div>

        <div class="form-group">
          <label for="author">Author</label>
          <input type="text" name="author" class="form-control" id="author" placeholder="Name">
        </div>

        <div class="form-group">
            <label for="slug">Slug</label>
            <input type="text" name="slug" class="form-control" id="slug" placeholder="Slug">
        </div>

        <div class="form-group">
            <label for="volume">Volume</label>
            <input type="number" name="volume" class="form-control" id="volume" placeholder="Volume">
        </div>

        <div class="container">
            <button type="submit" class="btn btn-lg btn-block btn-primary mb-5">Save</button>
            <a href="/admin" class="btn btn-lg btn-block btn-danger">Cancel</a>
        </div>
    </form>
</body>
</html>