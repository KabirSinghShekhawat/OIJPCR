<%- include('../partials/adminHeader') %>

    <body>
        <div class="journalList-container">

            <div class="new-journal">
                <a href="/admin/journal">
                    <button class="btn btn-blue btn-hover font-md">New Journal</button>
                </a>
                <a href="/admin/podcast">
                    <button class="btn btn-green btn-hover font-md">New Podcast</button>
                </a>
                <a href="/admin/podcast/list">
                    <button class="btn btn-orange btn-hover font-md">Podcast List</button>
                </a>
                <a href="/admin/comments">
                    <button class="btn btn-orange btn-hover font-md">Comments List</button>
                </a>
                <a href="/">
                    <button class="btn btn-dark btn-hover font-md">Home</button>
                </a>
                <form method="POST" action="/admin/logout" class="d-inline">
                    <button class="btn btn-red btn-hover font-md">Logout</button>
                </form>
            </div>

            <h1 class="journals-heading">Journals</h1>
            <% for (let journal of journals) { %>
                <div class="journal-card-container">
                    <div class="journal-card-title">
                        <h3>
                            <%= journal.title %>
                        </h3>
                    </div>

                    <div class="journal-card-author">
                        <div>
                            <h4>
                                <span>Written by -</span>
                                <%= journal.author %>
                            </h4>
                            <h5>
                                <span>Volume: </span>
                                <%= journal.volume %>
                            </h5>
                        </div>
                        
                        <div class="journal-card-details">
                            <div>
                                <% const slug = slugify(journal.slug) %>
                                <a href="/journals/<%=slug%>/<%=journal._id%>">
                                    <button class="btn btn-blue">Read more</button>
                                </a>
                            </div>

                            <div>
                                <a href="/admin/journal/<%=journal._id%>">
                                    <button class="btn btn-orange">Edit</button>
                                </a>
                            </div>
    
                            <form method="POST" action="/admin/journal/<%=journal._id%>?_method=DELETE">
                                <button type="submit" class="btn btn-red">Delete</button>
                            </form>
                        </div>
                    </div>

                    <div class="journal-card-content">
                        <p>
                            <%= journal.slug %>
                        </p>
                    </div>
                </div>
            <% } %>
        </div>
    </body>
</html>