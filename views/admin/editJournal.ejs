<%- include('../partials/adminHeader') %>

<body class="container-fluid">
    <form method="POST" action="/admin/journal/<%=journal._id%>?_method=PUT" class="form">
        <textarea id="summernote" name="editordata"><%-journal.content%></textarea>
        
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" name="title" value="<%=journal.title%>"
                class="form-control" id="title" placeholder="Title">
        </div>

        <div class="form-group">
          <label for="author">Author</label>
          <input type="text" name="author" value="<%=journal.author%>" 
            class="form-control" id="author" placeholder="Name">
        </div>


        <div class="form-group">
            <label for="slug">Slug</label>
            <input type="text" name="slug" value="<%=journal.slug%>" 
                class="form-control" id="slug" placeholder="Slug">
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</body>
</html>